public class Main
{
public int countSumPairsForTarget(int target, int[] arr) {
        var counter = 0; 
        for (int i=0; i<arr.length; i++) {
            for (int j=i+1; j < arr.length; j++) {
                if (arr[i]+arr[j] == target) {
                    counter++;
                }
            }
        }

        if (counter == 0) {
            counter = -1;
        }

        System.out.println(counter);
        return counter;
    }
}
